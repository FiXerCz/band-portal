<%= form_for Comment.new, :url => band_path(@band), :html => { :class => "form-horizontal" } do |f| %>
  <%= f.hidden_field :id, { :value => params[:id] } %>

  <div class="form-group">
    <%= f.label :text, :class => 'control-label col-lg-2 required' %>
    <div class="col-lg-10">
      <%= f.text_field :text, :class => 'form-control' %>
      <%=f.error_span(:text) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
