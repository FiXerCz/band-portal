<%- model_class = Band -%>
<div class="page-header">
  <h1><%= @band.title %></h1>
  <% if !@band.active %><span class='pull-right text-muted'>band is not active</span><% end %>
  <p><em>genre / genre</em></p>
</div>

<p><%= @band.description %></p>

<h2>Band members</h2>

<dl class="dl-horizontal">
  <% @band.band_roles.each do |band_member| %>
  <dt><strong><%= band_member.user.username %></strong></dt>
  <dd><em>(<%= band_member.role %>)</em></dd>
  <% end %>
</dl>

<h2>Albums</h2>

<h2>Concerts</h2>

<h2>Comments</h2>

<div class="buttons">
  <%= link_to t('.back', :default => t("helpers.links.back")), bands_path, :class => 'btn btn-default'  %>
  <% if can? :update, @band %>
    <%= link_to 'Edit band', edit_band_path(@band), :class => 'btn btn-default' %>
  <% end %>
  <% if can? :destroy, @band %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  band_path(@band),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  <% end %>
</div>
