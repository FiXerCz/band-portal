<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @song.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lyrics) %>:</strong></dt>
  <dd><%= @song.lyrics %></dd>
  <dt><strong><%= model_class.human_attribute_name(:composer) %>:</strong></dt>
  <dd><%= @song.composer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:band_id) %>:</strong></dt>
  <dd><%= @song.band.title %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              band_songs_path(@song.band), :class => 'btn btn-default'  %>
<% if can? :update, @song %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_band_song_path(@song.band, @song), :class => 'btn btn-default' %>
<% end %>
<% if can? :destroy, @song %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              band_song_path(@song.band, @song),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
