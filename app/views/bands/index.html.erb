<%- model_class = Band -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  <% if can? :create, Band %>
      <%= link_to t('.new', :default => t("helpers.links.new")), new_band_path, :class => 'btn btn-primary' %>
  <% end %>
</div>

<div class="text-center">
  <%= will_paginate @bands, renderer: BootstrapPagination::Rails %>
</div>

<% @bands.each_slice(2) do |bands| %>
  <div class="row">
    <% bands.each do |band| %>
      <div class="col-sm-6">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= band.title %><% if !band.active %> <small>inactive</small><% end %></h3>
            <p class="text-muted"><i>genre / genre</i></p>
            <p class="text-justify"><%= truncate band.description, :length  => 200, :separator => /\w/, :omission => '...' %></p>
            <div class="clearfix">
              <p class="pull-left text-info"><%= pluralize band.fans.count, 'fan' %></p>
              <p class="pull-right">
                <%= link_to 'Details', band_path(band), :class => 'btn btn-xs btn-default', :role => 'button' %>
                <% if can? :update, band %>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_band_path(band), :class => 'btn btn-default btn-xs', :role => 'button' %>
                <% end %>
                <% if can? :destroy, band %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                band_path(band),
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                :class => 'btn btn-xs btn-danger', :role => 'button' %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
