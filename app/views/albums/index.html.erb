<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Released</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.released %></td>
        <td><%= link_to 'Show', [album.band, album] %></td>
        <td><%= link_to 'Edit', edit_band_album_path(album.band, album) %></td>
        <td><%= link_to 'Destroy', [album.band, album], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

