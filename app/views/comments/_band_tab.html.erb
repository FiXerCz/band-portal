<h3>All comments</h3>
<table class="table comments">
  <tbody>
  <% @comments.each do |comment| %>
      <tr><td>
        <span style="float:right">Posted at <%= comment.created_at.strftime("%k:%M")%></span>
        <h4><%= User.find(comment.user_id).username %></h4>
        <%= comment.text %><br>

        <% if can? :update, comment %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_comment_path(comment), :class => 'btn btn-default btn-xs', :style => "float: right" %>
        <% end %>
        <% if can? :destroy, comment %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        comment_path(comment), :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger', :style => "float: right" %><% end %>
      </td></tr>
  <% end %>
  </tbody>
</table>

<% if can? :create, Comment %>
    <div class="new-comment">
      <h3>Add new comment</h3>
      <%= render :partial => 'comments/form' , :action => 'new' , :object => @band %>
    </div>
<% end %>