<h1>Welcome</h1>

<% if user_signed_in? %>

  <h2>Notifications</h2>
  <%= render "home/home" %>

  <% if current_user.favourite_bands.empty? && current_user.bands.empty? %>
      <h3><%= link_to "Like your favorite bands", bands_path %> or <%= link_to "start up your own", new_band_path %>! </h3><br>
  <% end %>

<% else %>

  <% content_for :header do %>
      <div class="header">
        <div class="header-text">create your bandpage in minutes</div>
        <div class="header-text">connect with your fans</div>
        <div class="header-text"><%= link_to "Try it now", "/users/sign_up"  , :class => "btn btn-primary btn-lg"%></div>
      </div>
  <% end %>

<% end %>

<h2>Check out the following bands</h2>

<div class="row">
  <% get_random_bands.each do |band| %>
      <%= render :partial => 'bands/band_thumb', locals: {band: band} %>
  <% end %>
</div>