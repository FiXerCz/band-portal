<%= form_for Comment.new, :url => band_path(@band), :html => { :class => "form-horizontal" } do |f| %>
  <%= f.hidden_field :id, { :value => params[:id] } %>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.text_area :text, :class => 'form-control' %>
      <%=f.error_span(:text) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
