<% if user_signed_in? %>
  <% content_for :sidebar do %>
    <h3>Your profile</h3>
    <%= render "users/show_profile" %>
  <% end %>
<% end %>

<% unless @uncorfimed_concerts.empty? %>
        <div class="panel-heading  bg-warning ">
          <h3 class="panel-title text-warning">Please, confirm attendance of your band on following concerts:</h3>
        </div>
    <% end %>

    <p class="bg-warning text-warning"></p>

    <ul>
      <% @uncorfimed_concerts.each do |concert| %>
          <li class="list-unstyled">
            <strong><%= link_to concert[1][0].title, concert_path(concert[1][0]) %></strong>
            (<%= concert[0][0].title %>)
          </li>
      <% end %>
    </ul>

    <% unless @fan.empty? %>
        <h3>Events of your favourite bands: </h3>

        <table class="table table-striped concerts">
          <tbody>
        <% @fan.each do |band|
            if @performs = Performer.where(:band_id => band.id).each do |p|
              concert = Concert.find(p.concert_id) %>
                <%= render "home/table", :locals => {:concert => concert} %>
                <% end %>
            <% end %>
        <% end %>
          </tbody>
        </table>
    <% end %>

    <% unless @corfimed_concerts.empty? %>
        <h3>Incoming events of your band(s): </h3>
    <% end %>

<table class="table table-striped concerts">
  <tbody>
  <% @corfimed_concerts.each do |concert|
    concert = concert[1][0]
  %>
      <%= render "home/table", :locals => {:concert => concert} %>
  <% end %>
  </tbody>
</table>