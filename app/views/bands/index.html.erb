<%- model_class = Band -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th>Members</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= link_to band.id, band_path(band) %></td>
        <td><%= band.title %></td>
        <td><%= band.description %></td>
        <td><%= band.active %></td>
        <td><%=l band.created_at %></td>
        <td><%= band.members.count %></td>
        <td>
          <%= link_to 'Detail',
                      band_path(band), :class => 'btn btn-default btn-xs' %>
          <% if can? :update, band %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_band_path(band), :class => 'btn btn-default btn-xs' %>
          <% end %>
          <% if can? :destroy, band %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        band_path(band),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Band %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_band_path,
              :class => 'btn btn-primary' %>
<% end %>
